<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/StyleGUITest;component/Styles/Resources.xaml"/>
    </ResourceDictionary.MergedDictionaries>



    <Style TargetType="Window" x:Key="StandardWindow">
        <Setter Property="Background" Value="{StaticResource LightBackground}"></Setter>
        
    </Style>



    <Style TargetType="Window" x:Key="SettingsWindow">
        <Setter Property="Background" Value="{StaticResource LightBackground}"></Setter>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushHighlighted}"></Setter>
        <Setter Property="BorderThickness" Value="2"></Setter>        
    </Style>

</ResourceDictionary>